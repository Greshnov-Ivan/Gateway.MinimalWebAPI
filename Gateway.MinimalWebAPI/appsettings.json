{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ApisConfigure": {
    "UsersAPI": {
      "BaseAddress": "https://localhost:6060",
      "EndPoints": "/api/users"
    },
    "AccountsAPI": {
      "BaseAddress": "https://localhost:7070",
      "EndPoints": "/api/accounts"
    }    
  },
  "AllowedHosts": "*",
  "yarp": {
    "routes": {
      "accounts": {
        "clusterId": "accounts",
        "match": {
          "path": "accounts/{**catch-all}"
        },
        "transforms": [
          {
            "pathPattern": "{**catch-all}"
          }
        ]
      },
      "users": {
        "clusterId": "users",
        "match": {
          "path": "users/{**catch-all}"
        },
        "transforms": [
          {
            "pathPattern": "{**catch-all}"
          }
        ]
      }
    },
    "clusters": {
      "accounts": {
        //"loadbalancingPolicy": "RoundRobin",
        "destinations": {
          "destination1": {
            "address": "https://localhost:7070"
          },
          "destination2": {
            "address": "https://localhost:7071"
          },
          "destination3": {
            "address": "https://localhost:7072"
          }
        }
      },
      "users": {
        "destinations": {
          //"loadbalancingPolicy": "RoundRobin",
          "destination1": {
            "address": "https://localhost:6060"
          },
          "destination2": {
            "address": "https://localhost:6061"
          },
          "destination3": {
            "address": "https://localhost:6062"
          }
        }
      }
    }
  }
} 

  
